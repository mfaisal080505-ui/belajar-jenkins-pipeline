pipeline {
    agent any

    stages {
        stage('Welcome') {
            steps {
                echo '============================================='
                echo 'HALO FAISAL! PIPELINE SUDAH JALAN SEMPURNA'
                echo '============================================='
            }
        }

        stage('Sistem Check') {
            steps {
                echo 'Memeriksa identitas user...'
                sh 'whoami'
                echo 'Memeriksa direktori kerja...'
                sh 'ls -al'
                echo 'Memeriksa waktu server...'
                sh 'date'
            }
        }

        stage('Simulasi Proses') {
            steps {
                echo 'Sedang mencoba simulasi build project...'
                sh 'sleep 2'
                echo 'Build Berhasil!'
            }
        }
    }

    post {
        always {
            echo 'Pipeline selesai dieksekusi!'
        }
    }
}
