pipeline {
    agent any

    stages {
        stage('Welcome') {
            steps {
                echo 'Halo Faisal! Sekarang log-nya pasti panjang!'
            }
        }
        stage('Check System') {
            steps {
                echo 'Cek isi folder saat ini:'
                sh 'ls -la'
                echo 'Cek jam server:'
                sh 'date'
            }
        }
        stage('Simulasi Build') {
            steps {
                echo 'Lagi pura-pura nge-build project...'
                sh 'sleep 3'
                echo 'Build Selesai!'
            }
        }
    }
}
